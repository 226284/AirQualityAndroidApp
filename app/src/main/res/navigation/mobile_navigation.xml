        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_stations"
        android:name="com.example.airqualityapp.ui.stations.StationsFragment"
        android:label="@string/title_stations"
        tools:layout="@layout/fragment_stations"/>

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.airqualityapp.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map"/>
